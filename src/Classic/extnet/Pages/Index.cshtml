@page  "{handler?}"
@model Company.WebApplication.Pages.IndexModel
@using Company.WebApplication.Data
@{
    ViewData["Title"] = "Home page";
}
<ext-viewport layout="Border">
    <items>
        <ext-container
            region="North"
            cls="navbar"
            paddingAsString="0 20"
            height="64">
            <layout>
                <ext-hBoxLayout align="Middle" pack="Start" />
            </layout>
            <items>
                <ext-component flex="1" html=@("<a class=\"app-logo\" href=\"/\">Ext.NET App</a>") />
                <ext-component flex="1" />
                <ext-button
                    ui="Light"
                    scale="Medium"
                    iconCls="x-md md-icon-open-in-new"
                    iconAlign="Right"
                    text="Ext.NET Home"
                    href="https://ext.net"
                    />
            </items>
        </ext-container>

        <ext-container
            region="West"
            cls="sidebar"
            width="240"
            scrollable="true"
            paddingAsString="20">
            <content>
                <nav class="sidebar-nav">
                    <ul>
                    @{
                        foreach(var item in NavData.Items)
                        {
                            var active = HttpContext.Request.Path == @item.Path ? " active" : "";
                            var cls = $"sidebar-nav-link{active}";

                            <li><a href="@item.Path" class="@(cls)"><i class="x-md">@item.IconCls</i><span>@item.Name</span></a></li>
                        }
                    }
                    </ul>
                </nav>
            </content>
        </ext-container>

        <ext-container
            region="Center"
            scrollable="true"
            paddingAsString="30 20 30 50">
            <items>
                <ext-component html="<h1>Welcome to Ext.NET</h1><p>Start building a new Ext.NET app</p>" />
                <ext-container layout="HBox" width="668" x-margin="40 0">
                    <layout>
                        <ext-hboxLayout align="Stretch" />
                    </layout>
                    <items>
                        <ext-container layout="VBox" flex="1">
                            <defaults>
                                <ext-add key="bodyPadding" value="20" mode="Raw" />
                                <ext-add key="header" value="false" mode="Raw" />
                                <ext-add key="frame" value="true" mode="Raw" />
                                <ext-add key="width" value="200" mode="Raw" />
                                <ext-add key="flex" value="1" mode="Raw" />
                            </defaults>
                            <items>
                                <ext-panel cls="dashboard-panel docs" ui="Light" x-margin="0 20 20 0">
                                    <content>
                                        <i class="x-md">local_library</i>
                                        <p>Read the API Docs</p>
                                        <a class="panel-link" href="https://docs.ext.net" target="_blank" rel="noopener"></a>
                                    </content>
                                </ext-panel>
                                <ext-panel cls="dashboard-panel forums" ui="Light" x-margin="0 20 0 0">
                                    <content>
                                        <i class="x-md">forum</i>
                                        <p>Community Forums</p>
                                        <a class="panel-link" href="https://forums.ext.net/" target="_blank" rel="noopener"></a>
                                    </content>
                                </ext-panel>
                            </items>
                        </ext-container>
                        <ext-container layout="VBox" flex="1">
                            <defaults>
                                <ext-add key="bodyPadding" value="20" mode="Raw" />
                                <ext-add key="header" value="false" mode="Raw" />
                                <ext-add key="frame" value="true" mode="Raw" />
                                <ext-add key="width" value="200" mode="Raw" />
                                <ext-add key="flex" value="1" mode="Raw" />
                            </defaults>
                            <items>
                                <ext-panel cls="dashboard-panel examples" ui="Light" x-margin="0 20 20 0">
                                    <content>
                                        <i class="x-md">explore</i>
                                        <p>Examples Explorer</p>
                                        <a class="panel-link" href="https://examples.ext.net/" target="_blank" rel="noopener"></a>
                                    </content>
                                </ext-panel>
                                <ext-panel cls="dashboard-panel themes" ui="Light" x-margin="0 20 0 0">
                                    <content>
                                        <i class="x-md">style</i>
                                        <p>Pro Themes</p>
                                        <a class="panel-link" href="https://themes.ext.net/" target="_blank" rel="noopener"></a>
                                    </content>
                                </ext-panel>
                            </items>
                        </ext-container>
                        <ext-panel
                            cls="dashboard-panel action"
                            header="false"
                            width="226"
                            ui="Primary"
                            fill="true"
                            bodyPaddingAsString="25">
                            <content>
                                <i class="x-md">storefront</i>
                                <p>You can try Ext.NET for free. Commercial use requires the purchase of a license key.</p>
                                <ext-button
                                    ui="Light"
                                    scale="Medium"
                                    x-margin="25 0 0 0"
                                    style="width: 100%"
                                    href="https://ext.net/download/"
                                    text="Get Ext.NET"/>
                            </content>
                        </ext-panel>
                    </items>
                </ext-container>
            </items>
        </ext-container>
    </items>
</ext-viewport>
